<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_rounded_all">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"

                android:src="@drawable/user_image"
                app:shapeAppearanceOverlay="@style/circleImageViewRounded"
                app:strokeColor="@color/text_light"
                app:strokeWidth="1dp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/image"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_bold"
                android:lines="1"
                android:text="Customer Name"
                android:textColor="#3DA82B" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/driver_id"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/image"
                android:fontFamily="@font/nunito_bold"
                android:text="ID: 1234567890"
                android:textColor="@color/text_light" />


        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:padding="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/contact"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@+id/image"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_bold"
                    android:lines="1"
                    android:text="Contact"
                    android:textColor="@color/text_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@id/contact"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"

                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_regular"
                    android:lines="1"
                    android:text="Lorem Ipsum is simply dummy text "
                    android:textColor="@color/text_light" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="@color/light_extra" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@+id/image"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_bold"
                    android:lines="1"
                    android:text="Location"
                    android:textColor="@color/text_color" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/location"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_regular"
                    android:lines="1"
                    android:text="Lorem Ipsum is simply dummy text "
                    android:textColor="@color/text_light" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/nunito_bold"
            android:lines="1"
            android:text="Add Caregiver information"
            android:textColor="@color/text_color" />


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/nunito_regular"
            android:text="If your chosen caregiver isn't already designated under your DOH account go add them NOW to complete the delivery"
            android:textColor="@color/text_color" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/goto_doh_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/bg_white_outlined_green"
            android:text="Go to Doh website"
            android:textColor="@color/primary" />


        <LinearLayout
            android:id="@+id/allDone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/bg_white_outlined_green"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Done"
                android:textColor="@color/primary" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/ic_checked" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/checkTackingFalse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_gray"
            android:enabled="false"
            android:text="Check Tracking Status"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/checkTacking"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_bg"
            android:text="Check Tracking Status"
            android:textColor="@color/white"
            android:visibility="gone" />


    </LinearLayout>

    <ImageView
        android:id="@+id/cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:elevation="2dp"
        android:padding="4dp"
        android:src="@android:drawable/ic_delete"
        app:tint="@color/text_light" />

</RelativeLayout>