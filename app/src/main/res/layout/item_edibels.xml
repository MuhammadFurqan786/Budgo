<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="120dp"
    android:elevation="5dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_white_rounded_all">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/edible_image"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/image__2"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeWidth="1dp" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/edible_name"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/edible_image"
        android:fontFamily="@font/nunito_bold"
        android:text="Product Name"
        android:textColor="@color/text_color" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/edible_desc"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edible_name"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/edible_image"
        android:fontFamily="@font/nunito_regular"
        android:text="Lorem ipsum 1"
        android:textColor="@color/text_light" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/edible_price"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edible_desc"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/edible_image"
        android:fontFamily="@font/nunito_bold"
        android:text="$50.00"
        android:textColor="@color/text_price" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/c_value"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edible_price"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="8dp"
            android:layout_toEndOf="@id/edible_image"
            android:background="@color/button_background"
            android:fontFamily="@font/nunito_bold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="2dp"
            android:text="Sativa"
            android:textColor="@color/button_text"
            app:cornerRadius="4dp"
            app:strokeColor="@color/light_sky"
            app:strokeWidth=".5dp" />


</RelativeLayout>